<div class="form-group">
  <label class="control-label col-lg-2" for="inputTitle">Name</label>
  <div class="col-lg-10">
  {{input type="text" value=model.project.name id="inputName" classNames="form-control"}}
  </div>
</div>

<div class="form-group">
  <label class="control-label col-lg-2" for="inputTitle">Make this project public?</label>
  <div class="col-lg-10">
      {{input type="checkbox" name="isPublic" checked=model.project.isPublic}}  
  </div>
</div>

<div class="form-group">
  <label class="control-label col-lg-2" for="inputTitle">Members</label>
  <div class="col-lg-10">      
      {{#each model.users as |u|}}
        <label>{{u.username}}</label>
      {{input type="checkbox" name="members[u.id]" checked=model.project.members}}<br />
      {{/each}}
  </div>
</div>

<input type="hidden" value={{id}} id="id"/>
